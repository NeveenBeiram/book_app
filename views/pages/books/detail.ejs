<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- <link rel="stylesheet" href="styles/reset.css"> -->
  <link rel="stylesheet" href="styles/base.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
  <title>Document</title>
</head>
<body>
  <h1>Details</h1>
  
  <main>
  <section>
      <div>
        <img src="<%= detail.image_url %>">
        <p><%= detail.title %></p>
        <p><%= detail.author %></p>
        <p><%= detail.description %></p>
        <p>ISBN: <%= detail.isbn %></p>
        </div>

        <form action="/deleteBook/<%=detail.id%>?_method=delete" method="post">
          <button>Delete Book</button>
      </form>
      <button id='updateBtn'>Update</button>

  </section>

  <section id='updateForm'>
    <form action="/updateBook/<%=detail.id%>?_method=put" method="post">
     <input type="text" name="title" placeholder="Populated title"  value=' <%= detail.title  %> '>
     <br>
     <input type="text" name="author" placeholder="Populated author" value="<%= detail.author  %>">
     <br>
     <input type="text" name="image_url" placeholder="Populated image url"value="<%= detail.image_url %>">
     <br>
     <input type="text" name="isbn" placeholder="Populated ISBN" value="<%= detail.isbn  %>">
     <br>
     <textarea name="description" placeholder="Populated description" cols="30" rows="10"><%= detail.description %></textarea>
     <br>
     <button type="submit">Update Book</button>
  </form>
  </section>
</main>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>